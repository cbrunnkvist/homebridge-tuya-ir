{
  "pluginAlias": "TuyaIR",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "TuyaIR"
      },
      "client_id": {
        "title": "Client ID",
        "type": "string",
        "required": true,
        "default": "",
        "description": "Your Tuya IOT cloud project's client ID"
      },
      "secret": {
        "title": "Client Secret",
        "type": "string",
        "required": true,
        "default": "",
        "description": "Your Tuya IOT cloud project's secret"
      },
      "region": {
        "title": "Device Region",
        "type": "string",
        "required": true,
        "default": "",
        "oneOf": [
          {
            "title": "India",
            "enum": [
              "in"
            ]
          },
          {
            "title": "Europe",
            "enum": [
              "eu"
            ]
          },
          {
            "title": "China",
            "enum": [
              "cn"
            ]
          },
          {
            "title": "America",
            "enum": [
              "us"
            ]
          }
        ]
      },
      "smartIR": {
        "title": "List of Smart IR Devices",
        "type": "array",
        "items": {
          "type": "object",
          "title": "Smart IR Details",
          "properties": {
            "deviceId": {
              "title": "Smart IR Device ID",
              "type": "string",
              "required": true,
              "default": "",
              "description": "Device Id of the Smart IR Device"
            },
            "autoFetchRemotes": {
              "title": "Fetch configured remotes automatically?",
              "type": "boolean",
              "required": true,
              "default": true,
              "description": "Uncheck this box if your IR remotes are not discovered automatically. You will need to add your remote IDs manually below"
            },
            "devices": {
              "title": "List of configured Smart IR Remotes",
              "type": "array",
              "items": {
                "type": "object",
                "title": "Remote Details",
                "properties": {
                  "id": {
                    "title": "Remote Id",
                    "type": "string",
                    "description": "Remote ID",
                    "required": true
                  },
                  "diy": {
                    "title": "Is this Remote DIY?",
                    "type": "boolean",
                    "required": true
                  }
                }
              },
              "condition": {
                "functionBody": "return model.smartIR[arrayIndices].autoFetchRemotes === false;"
              }
            }
          }
        }
      }
    }
  }
}